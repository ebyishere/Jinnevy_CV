<!DOCTYPE html>
<html>
<head>
  <title>Awards & Honours</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-5">
  <h2>Awards & Honours</h2>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Year</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% awards.forEach(a => { %>
      <tr>
        <td><%= a.title %></td>
        <td><%= a.year %></td>
        <td><%= a.description %></td>
        <td>
          <a href="/admin/awards/edit/<%= a.id %>" class="btn btn-sm btn-warning">Edit</a>
          <a href="/admin/awards/delete/<%= a.id %>" class="btn btn-sm btn-danger">Delete</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <h3>Add Award</h3>
  <form action="/admin/awards" method="POST">
    <div class="mb-3">
      <label>Title</label>
      <input type="text" name="title" class="form-control" required>
    </div>
    <div class="mb-3">
      <label>Year</label>
      <input type="number" name="year" class="form-control" required>
    </div>
    <div class="mb-3">
      <label>Description</label>
      <textarea name="description" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Add Award</button>
  </form>

  <a href="/admin/dashboard" class="btn btn-secondary mt-3">Back to Dashboard</a>
</div>
</body>
</html>
