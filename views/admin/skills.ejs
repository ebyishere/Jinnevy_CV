<!DOCTYPE html>
<html>
<head>
  <title>Skills</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-5">
  <h2>Skills</h2>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Skill</th>
        <th>Level (%)</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% skills.forEach(s => { %>
      <tr>
        <td><%= s.skill_name %></td>
        <td><%= s.skill_level %></td>
        <td>
          <a href="/admin/skills/edit/<%= s.id %>" class="btn btn-sm btn-warning">Edit</a>
          <a href="/admin/skills/delete/<%= s.id %>" class="btn btn-sm btn-danger">Delete</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <h3>Add Skill</h3>
  <form action="/admin/skills" method="POST">
    <div class="mb-3">
      <label>Skill Name</label>
      <input type="text" name="skill_name" class="form-control" required>
    </div>
    <div class="mb-3">
      <label>Level (%)</label>
      <input type="number" name="skill_level" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary">Add Skill</button>
  </form>

  <a href="/admin/dashboard" class="btn btn-secondary mt-3">Back to Dashboard</a>
</div>
</body>
</html>
